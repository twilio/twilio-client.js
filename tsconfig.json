{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "target": "es5",
    "lib": ["es5", "es6", "es2016", "es2017.object", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "rootDir": "lib",
    "outDir": "es5",
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true
  },
  "include": [
    "lib/**/*.ts"
  ]
}
